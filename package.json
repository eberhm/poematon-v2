    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.55.0",
    "uuid": "^9.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
